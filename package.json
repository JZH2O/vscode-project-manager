{
    "name": "project-workspace-manager",
    "displayName": "Project Workspace Manager",
    "description": "A VS Code extension for managing and switching between project workspaces, supporting multi-folder project configurations and automatic state saving/restoring.",
    "version": "1.2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/project-workspace-manager.git"
    },
    "publisher": "JZH2O",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "project",
        "workspace",
        "manager",
        "switcher",
        "multi-root"
    ],
    "activationEvents": [
        "workspaceContains:**/work.code-workspace"
    ],
    "main": "./dist/extension.js",
    "capabilities": {
        "virtualWorkspaces": false
    },
    "contributes": {
        "commands": [
            {
                "command": "project-workspace-manager.selectProject",
                "title": "Select Project",
                "category": "Project Manager"
            },
            {
                "command": "project-workspace-manager.refreshProjects",
                "title": "Refresh Project List",
                "category": "Project Manager"
            }
        ],
        "permissions": [
            {
                "name": "fileSystem",
                "description": "Used for reading and writing workspace files"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Project Manager Configuration",
            "properties": {
                "projectManager.workspacePath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the work.code-workspace file, if empty uses the default path"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run webpack-prod",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "webpack": "webpack --mode development",
        "webpack-prod": "webpack --mode production"
    },
    "devDependencies": {
        "@types/node": "14.x",
        "@types/vscode": "^1.74.0",
        "ts-loader": "^9.5.4",
        "typescript": "^4.9.4",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1"
    },
    "dependencies": {
        "archiver": "^7.0.1"
    }
}